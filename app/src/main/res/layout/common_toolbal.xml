<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tl_common"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:theme="@style/AppBarOverlayTheme"
    app:popupTheme="@style/PopupOverlayTheme"
    app:navigationIcon="@drawable/ic_navigation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            tools:text="首页"
            android:layout_alignParentStart="true"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/iv_common_search"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/bg_search_rect"
            android:focusable="true"
            android:clickable="true"
            app:srcCompat="@drawable/ic_search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:contentDescription=""
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>