<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
    </style>

    <style name="AppTheme" parent="@style/BaseTheme" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.LauncherActivity">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.SearchActivity">
        <item name="windowNoTitle">true</item>
        <!--设置menu中item的图标颜色-->
        <item name="android:textColorSecondary">@color/white</item>
        <!--设置commit按钮和搜索按钮的图标-->
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <!--菜单风格-->
    <style name="AppBarOverlayTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--toolbar弹出菜单的风格-->
    <style name="PopupOverlayTheme" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="overlapAnchor">false</item>
    </style>

    <!--Dialog风格-->
    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparency</item>
        <item name="android:windowAnimationStyle">@style/DialogAnim</item>
    </style>

    <style name="PopupAnim">
        <item name="android:windowEnterAnimation">@anim/anim_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_exit</item>
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_exit</item>
    </style>

    <style name="DialogBottomAnim">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_bottom_exit</item>
    </style>

    <style name="ActivityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/anim_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_open_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_close_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_close_enter</item>
        <item name="android:taskOpenEnterAnimation">@anim/anim_open_enter</item>
        <item name="android:taskOpenExitAnimation">@anim/anim_open_exit</item>
        <item name="android:taskCloseExitAnimation">@anim/anim_close_exit</item>
        <item name="android:taskCloseEnterAnimation">@anim/anim_close_enter</item>
        <item name="android:taskToFrontEnterAnimation">@anim/anim_open_enter</item>
        <item name="android:taskToFrontExitAnimation">@anim/anim_open_exit</item>
        <item name="android:taskToBackExitAnimation">@anim/anim_close_exit</item>
        <item name="android:taskToBackEnterAnimation">@anim/anim_close_enter</item>
    </style>

    <style name="TipWindowAnim">
        <item name="android:windowEnterAnimation">@anim/anim_tip_in</item>
        <item name="android:windowExitAnimation">@anim/anim_tip_out</item>
    </style>

    <!--SearchViewStyle-->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="goIcon">@drawable/ic_search</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <!--SwitchButton轨迹style-->
    <style name="SwitchTrack" parent="Theme.AppCompat.Light">
        <!--开启时的颜色-->
        <item name="colorControlActivated">@color/colorTrackOpen</item>
        <!--关闭时颜色-->
        <item name="colorSwitchThumbNormal">@color/colorTrackClose</item>
        <!--关闭时的轨迹颜色-->
        <item name="android:colorForeground">@color/colorTrackClose</item>

    </style>

    <!-- 设置Toolbar标题字体的大小 -->
    <style name="CommonToolbarTitleSize" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <!--设置Toolbar标题与NavigationIcon的距离-->
    <style name="CommonToolbarDistance" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">@dimen/dp_0</item>
        <item name="contentInsetStartWithNavigation">@dimen/dp_0</item>
    </style>

    <style name="MineFragmentTextStyle">
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="MineFragmentConstraintStyle">
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/fg_card_rect</item>
    </style>

</resources>
